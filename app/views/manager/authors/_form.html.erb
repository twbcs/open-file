<%= form_with(model: [:manager, author], local: true) do |form| %>
  <% if author.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(author.errors.count, "error") %> prohibited this author from being saved:</h2>

      <ul>
      <% author.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :dir_name %>
    <%= form.text_field :dir_name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :tag_list %>
    <%= form.text_field :tag_list, name: 'author[tag_list][]', value: author.tag_list, class: 'form-control', id: 'form_tag_names' %>
  </div>
  <div class='tag_list'>
    <% @all_names.each do |t| %>
      <% unless author.tag_list.include? t.name %>
        <span class="tag active badge badge-primary"><%= t.name %></span>
      <% end %>
    <% end %>
  </div>

  <div class="field">
    <% if author.image.attached? %>
      <%= link_to remove_manager_author_path(author), class: "btn btn-primary" do %>
        <i class="fas fa-trash-alt"></i> 移除檔案
      <% end%>
      <%= image_tag @author.image.variant(resize: "200x400") %><br>
    <% end %>
    <%= form.file_field :image %>
  </div>
<br>
  <div class="actions">
    <%= form.submit nil, class: "btn btn-primary" %>
  </div>
  <br>
<% end %>
