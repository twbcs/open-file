<p id="notice"><%= notice %></p>
<%= link_to '新作者', new_manager_author_path, class: "btn btn-primary btn-sm" %>
<%= link_to '瀏覽畫面', authors_path, class: "btn btn-primary btn-sm" %>

<div class='tag_list'>
  <% Gutentag::Tag.all.each do |t| %>
    <%= link_to t.name, manager_authors_path(tag_name: t.name), class: "badge badge-primary" %>
  <% end %>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">名稱</th>
      <th scope="col">目錄名稱</th>
      <th scope="col">存在</th>
      <th scope="col">圖檔</th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
    <%
      begin
        Dir.chdir("#{FILE_DIR}/#{author.dir_name}")
      rescue => ex
        Dir.chdir(FILE_DIR)
      end
    %>
      <tr>
        <td><%= author.name %></td>
        <td><%= author.dir_name %></td>
        <td><%= Dir.pwd == FILE_DIR ? '否' : '是' %></td>
        <td><%= author.image.attached? ? '是' : '否' %></td>
        <td>
          <%= link_to '檢視', manager_author_path(author), class: "btn btn-primary btn-sm" %>
          <%= link_to '修改', edit_manager_author_path(author), class: "btn btn-primary btn-sm" %>
          <%= link_to '刪除', manager_author_path(author), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
