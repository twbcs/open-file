<div class="edit">
  <%= form_with(model: [:manager, owner, archive], local: true)  do |form| %>
    <% if archive.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(archive.errors.count, "error") %> prohibited this archive from being saved:</h2>

        <ul>
        <% archive.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control', readonly: true %>
    </div>

    <div class="field">
      <%= form.label :tag_names %>
      <%= form.text_field :tag_names, name: 'archive[tag_names][]', value: archive.tag_names, class: 'form-control' %>
    </div>
    <div class='tag_list'>
      <% Gutentag::Tag.all.each do |t| %>
        <% unless archive.tag_names.include? t.name %>
          <span class="tag active badge badge-primary"><%= t.name %></span>
        <% end %>
      <% end %>
    </div>
    <div class="actions">
      <%= form.submit nil, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
