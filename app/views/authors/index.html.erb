  <i class="fas fa-th"></i> 瀏覽電影
<% end%>
<%= link_to animes_path, class: "btn btn-primary btn-sm right" do %>
  <i class="fas fa-th"></i> 瀏覽動畫
<% end%>
<%= link_to manager_authors_path, class: "btn btn-primary btn-sm right" do %>
  <i class="fas fa-align-justify"></i> 管理介面
<% end%>

<div class='tag_list'>
  <% @all_names.each do |t| %>
    <%= link_to authors_path(tag_name: t), class: "badge badge-primary" do %>
      <i class="fas fa-tag"></i> <%= t %>
    <% end%>
  <% end %>
</div>

<div class="list">
  <% @authors.each do |author|
    begin
      Dir.chdir("#{AUTHOR_DIR}/#{author.dir_name}")
    rescue => ex
      Dir.chdir(AUTHOR_DIR)
    end

    unless Dir.pwd == AUTHOR_DIR %>
      <%= link_to author do %>
        <div class="item">
          <div class="name">
            <%= author.name %>
          </div>
          <div class="image">
            <%= image_tag author.image.variant(resize: "140x198!") if author.image.attached? %>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
