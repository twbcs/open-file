<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<% @authors.each do |author|
  begin
    Dir.chdir("#{FILE_DIR}/#{author.dir_name}")
  rescue => ex
    Dir.chdir(FILE_DIR)
  end

  unless Dir.pwd == FILE_DIR %>
    <%= link_to author, class: "btn btn-primary" do %>
      <div class="list">
        <div class="name">
          <%= author.name %>
        </div>
        <div class="image">
          <%= image_tag author.image %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Dir name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= author.dir_name %></td>
        <td><%= link_to 'Show', author %></td>
        <td><%= link_to 'Edit', edit_author_path(author) %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path %>
