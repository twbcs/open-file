
<%= render 'shared/show_tag', items: @all_names %>

<div class="list">
  <% @animes.each do |anime|
    begin
      Dir.chdir("#{ANIME_DIR}/#{anime.dir_name}")
    rescue => ex
      Dir.chdir(ANIME_DIR)
    end

    unless Dir.pwd == ANIME_DIR %>
      <%= link_to anime do %>
        <div class="item">
          <div class="name">
            <%= anime.name %>
          </div>
          <div class="image">
            <%= image_tag anime.image.variant(resize: "140x198!") if anime.image.attached? %>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
